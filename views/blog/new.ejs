<% layout('layouts/blogBoilerplate')%>

<div class="mt-5 py-5">
  <h1 class="text-center">New Blog Post</h1>
  <div class="col-6 offset-3">
    <form action="/blog" method="POST" novalidate class="validated-form">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          name="post[title]"
          id="title"
          required />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          name="post[image]"
          id="image"
          required />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="body">Text</label>
        <textarea
          class="form-control"
          type="text"
          name="post[body]"
          id="body"
          required></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <button class="btn btn-success">Add Post</button>
      </div>
    </form>
  </div>
</div>
